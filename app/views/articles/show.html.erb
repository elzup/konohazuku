<p id="notice"><%= notice %></p>

<div class="container">
  <h1>記事詳細</h1>
  <div class="page-header">
    <p>
      <h1>
      <%= @article.title %>
      </h1>
    </p>
  </div>
    <p>
        <strong>作成者:</strong>
      <h4>
        <%= @article.author.name %>
      </h4>
    </p>
        <strong>アサインユーザ一覧:</strong>
        <p>
        <h4>
          <% @article.assigned_users.each do |assigned_user|%>
              <%= assigned_user.name%>
          <%end%>
        </h4>
        </p>
    <p>
      <strong>詳細:</strong>
    </p>
    <p class="lead">
      <%= @article.message %>
    </p>


  <hr>
  <div class="container">
    <div class="pull-right">
    <%= link_to 'Edit', edit_article_path(@article), class:'btn btn-default' %> |
    <%= link_to 'Back', root_path, class:'btn btn-default' %>
    </div>
  </div>
</div>

